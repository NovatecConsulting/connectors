        <artifactId>connector-aws-parent</artifactId>
        <version>8.7.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <name>aws-connector-s3-parent</name>
    <artifactId>connector-aws-s3-parent</artifactId>
